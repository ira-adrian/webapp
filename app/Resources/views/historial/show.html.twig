{% extends 'base.html.twig' %}

{% block body %}
    <h1>Historial</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ historial.id }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{% if historial.fecha %}{{ historial.fecha|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Texto</th>
                <td>{{ historial.texto }}</td>
            </tr>
            <tr>
                <th>Tipo</th>
                <td>{{ historial.tipo }}</td>
            </tr>
            <tr>
                <th>Tipoid</th>
                <td>{{ historial.tipoId }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('historial_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('historial_edit', { 'id': historial.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
