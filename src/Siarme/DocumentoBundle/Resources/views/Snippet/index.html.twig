{# Siarme/ExpedienteBundle/Resources/views/Extranet/index.html.twig #}
{% extends 'ExpedienteBundle:Default:layout.html.twig' %}
{% block title %} SINIPPET {% endblock %}
{% block stylesheets %}   
     <link href="{{ asset('bundles/expediente/plugins/boostrap3/css/bootstrap_yeti.min.css') }}" type="text/css" rel="stylesheet">
       <!-- DataTables -->
  <link href="{{ asset('bundles/expediente/plugins/datatables/jquery.dataTables.min.css')}}" type="text/css" rel="stylesheet">    
{% endblock %}
{% block menu_li %}
     <li>
          <a href="{{ path('snippet_new' , { 'slug': 'snippet'} ) }}" role="button"> <span class="glyphicon glyphicon-pushpin"> NUEVO Registro </span></a>
     </li>
     {# 
      <form class="navbar-form navbar-right" method="POST" action="{{ path('snippet_index')}}" role="search">
          <div class="form-group">
            <input name="consulta"  type="text" class="form-control" placeholder="Buscar" required />
          </div>
          <button type="submit" class="btn btn-default" >Buscar</button>
      </form>
      #}
{% endblock %}

{% block contenido %}
{% block mensaje %}
 {{ include('ExpedienteBundle:Default:_mensaje.html.twig') }}
{% endblock %}
<div class="container">
<table id="tablaSnippet" class="table table-responsive table-hover">
   <thead>
<tr>{# sorting of properties based on query components #}
     <th>N° </th>
    <th> Texto </th>
    <th> Acciones </th>
</tr>
</thead>
{# table body #}
<tbody> 
{% for snippet in pagination  %}
<tr>
              <td> {{ loop.index }}</td>
              <td> 
                 {{ snippet.texto  |striptags('<strong> <u>') | raw }}
              </td>
               <td>
                  <a  class="label label-info" data-toggle="tooltip" data-placement="top" title="MODIFICAR Registro"   href="{{ path('snippet_edit' , { 'id': snippet.id } ) }}"><span class="glyphicon glyphicon-pencil"></span> </a> &nbsp;
                  <a  class="label label-danger" data-toggle="tooltip" data-placement="top" title="Eliminar Registro" onclick= "return confirm('¿Desea ELIMIAR?');"  href="{{ path('snippet_eliminar' , { 'id': snippet.id } ) }}"><span class="glyphicon glyphicon-trash"></span> </a>
              </td>


</tr>

{% endfor %}
</tbody>
</table>
{# display navigation #}
<div class="navigation pagination">
    {{ knp_pagination_render(pagination) }}
</div>
     </div>
{% endblock %}

{% block javascripts %} 
{{ parent() }}
          <!-- DataTables -->
<script src="{{ asset('bundles/expediente/plugins/datatables/jquery.dataTables.min.js') }}"></script>
  <script> 
  $(function () {
    $("#tablaSnippet").DataTable({"searching": true, "order": [[ 0, "desc" ]], "lengthChange": false,"pageLength": 20,
            "language": {
                "url": "{{asset('bundles/expediente/plugins/datatables/extensions/language/Spanish.json')}}"
            },
        });
  });

</script> <!-- DataTables  -->
{% endblock %}
