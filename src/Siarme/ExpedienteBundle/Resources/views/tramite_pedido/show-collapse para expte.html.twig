<a href="{{ path('tramite_index') }}">Volver a lista de Pedidos</a>
 <div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">PEDIDO {{ tramite.numeroTramite }} - Fecha: {% if tramite.fechaDestino %}{{ tramite.fechaDestino|date('d-m-Y') }}{% endif %}</div>

  <!-- List group -->
  <div class="list-group" aria-multiselectable="true">
    <div class="list-group-item text-center" >
        <dl class="list-group-item-heading" role="tab" id="headingTwo">
             <dt>
                {{ tramite.trimestre }}° Trimestre - SAF N° {{ tramite.organismoOrigen.saf.numeroSaf }} - {{ tramite.organismoOrigen.codigoGde }} - {{ tramite.organismoOrigen.organismo }}  
