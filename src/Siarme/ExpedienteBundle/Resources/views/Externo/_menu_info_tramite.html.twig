    <a class="dropdown-toggle previous" data-toggle="dropdown" role="button" aria-expanded="false">{% if tramite.documento | length > 0 %}<span  class="glyphicon glyphicon-file text-info" aria-hidden="false">{{ tramite.documento | length }}</span>{% else %}<span  class="glyphicon glyphicon-file text-muted" aria-hidden="false">{{ tramite.documento | length }}</span>{% endif %}</a>
       <ul  class="dropdown-menu"  style="width:300px;">  <!-- dropdown-menu -->  
                {% for documento in tramite.documento %} 
