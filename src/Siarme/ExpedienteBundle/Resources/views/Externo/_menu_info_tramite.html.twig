{# Siarme\ExpedienteBundle\Resources\views\Tramite\_menu_acciones_tramite.html.twig #}
  {% if tramite.recordatorio | length > 0 %}
    <span data-toggle="tooltip" data-placement="top" title="Agenda">
    <a class="dropdown-toggle previous hidden-print" data-toggle="dropdown" role="button" aria-expanded="false"> <span  class="glyphicon glyphicon-calendar text-info" aria-hidden="false"><small>{{tramite.recordatorio | length}}</small></span></a>
       <ul  class="dropdown-menu"  style="width:400px;">  <!-- dropdown-menu -->  
            {% for recordatorio in tramite.recordatorio  %}
                    <li class="list-group-item" style="margin:0px;">   <!-- list-group -->  
                       <span class="glyphicon glyphicon-calendar text-info"></span> {{recordatorio | upper }} - {{recordatorio.fecha | date('d-m-Y') }} - {{recordatorio.hoy ? 'Hoy': '' }}- {{recordatorio.vigente ? 'Vigente': 'Finalizado' }}

                    </li> <!-- list-group -->
             {% endfor %}
        </ul> <!-- dropdown-menu -->  
     </span>

 {% endif %}
{% if tramite.documento | length > 0 %}
