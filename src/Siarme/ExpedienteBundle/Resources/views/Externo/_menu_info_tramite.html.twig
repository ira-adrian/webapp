           <li class="list-group" style="margin:0px;" >   <!-- list-group -->   
                 <a href="{{ path('documento_show', { 'id': documento.id }) }}"> 
                 {% if ( app.user.id == documento.usuario.id) %}
                    <small><span data-toggle="tooltip" data-placement="top" title='{{ documento.usuario | title }}' class='glyphicon glyphicon-user text-success' aria-hidden="true"></span></small>
                    {% else %}       
                    <small><span data-toggle="tooltip" data-placement="top" title='{{ documento.usuario | title }}' class='glyphicon glyphicon-user  text-muted' aria-hidden="true"></span></small>
                    {% endif %}                             
                {% if documento.papelera == false  %}
                        {% if documento.tipoDocumento.esArchivo %} 
                            {% set type = documento.archivo |default('nn.pdf') |split('.') %}
                            <span style="font-size: 20px" class="file-icon" data-type='{{type[1]}}'></span> {{ documento.nombreArchivo[:23]}}...
                        {% else %}
                            <span style="font-size: 20px" class='{{documento.tipodocumento.glyphicon ~ ' text-primary'}}'></span> {{ documento }}
                         {% endif %}
                {% endif %}  
                 </a> 
          </li> <!-- list-group --> 
        {% endfor %}
    </ul> <!-- dropdown-menu -->  
  </span>
 {% endif %} 

