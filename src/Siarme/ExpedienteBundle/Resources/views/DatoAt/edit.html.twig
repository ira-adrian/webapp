{% extends 'ExpedienteBundle:Default:layout.html.twig' %}
{% block stylesheets %}   
{{ parent() }}
      <link href="{{ asset('bundles/expediente/select2/css/select2.min.css') }}" rel="stylesheet">     
{% endblock %}
{% block menu_li %}
    <li>
        <a href="{{ path('expediente_reparticion_index') }}" role="button"> <span class="glyphicon glyphicon-list-alt"> Lista de Expts. </span></a>
    </li> 
    <li>
        {{ form_start(delete_form, {'attr': {'onclick': 'return confirm("¿Desea ELIMINAR el Datos de Denuncia A. T.?")'}}) }}                       
         <button class="btn btn-danger btn-sm"  type="submit" value="Eliminar"><span class="glyphicon glyphicon-trash"> Eliminar  </span> </button>
         {{ form_end(delete_form) }}
    </li>

{% endblock %}
{% block main %}
    <div class="panel panel-default">
        <div class="panel-heading text-center">  
           <h4> TURNO DE JUNTA MEDICA </h4>
          <h4>{{ expediente.agente }} <br> {{ expediente.extracto }} </h4>
        </div>
         <div class="panel-body">
            {{ form_start(edit_form) }}
            {{ form_widget(edit_form) }}

            <div class="text-right">
              <a class="btn btn-primary"  href="{{ path('expediente_show', { 'id': expediente.id }) }}" role="button"> CANCELAR </a>
     
                <input class="btn btn-danger" type="submit" onclick= "return confirm('¿Desea GUARDAR los cambios?');" value="GUARDAR" />
            </div>

            {{ form_end(edit_form) }}

        </div>
    </div>
{% endblock %}

{% block javascripts %} 
{{ parent() }}}
        <script src="{{ asset('bundles/expediente/select2/js/select2.min.js') }}"></script>
         <script> /*-- $('select').select2({  allowClear:true, placeholder:""});*/
          $('select').select2({allowClear:true, placeholder:""});
           </script>
{% endblock %}