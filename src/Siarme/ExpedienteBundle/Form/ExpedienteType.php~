<?php

namespace Siarme\ExpedienteBundle\Form;

use Symfony\Component\Form\AbstractType;
use Symfony\Component\Form\FormBuilderInterface;
use Symfony\Component\OptionsResolver\OptionsResolver;
use Siarme\ExpedienteBundle\Form\IniciarTramiteType;
use Siarme\ExpedienteBundle\Form\DatoATType;
use Siarme\AusentismoBundle\Entity\Agente;
use Siarme\AusentismoBundle\Form\ObraSocialType;
use Symfony\Component\Form\Extension\Core\Type\TextareaType;
use Symfony\Component\Form\Extension\Core\Type\TextType;
use Symfony\Component\Form\Extension\Core\Type\CollectionType;
use Symfony\Component\Form\Extension\Core\Type\ChoiceType;
use Tetranz\Select2EntityBundle\Form\Type\Select2EntityType;
use Symfony\Component\Form\Extension\Core\Type\NumberType;


class ExpedienteType extends AbstractType
{

    /**
     * {@inheritdoc}
     */
    public function buildForm(FormBuilderInterface $builder, array $options)
    {

        $builder     
                //->add('letra')
                ->add('numero', NumberType::class,  array('label' => 'Numero: '))
                ->add('anio', NumberType::class,  array('label' => 'AÃ±o: '))
               // ->add('extracto',TextareaType::class, array('label' => 'Referencia - (Solicitud):','required' => true,'attr' => ['placeholder' => 'Ejemplo: EX-00011124-2018 (DPRH#SSG) - S/ ACCICENTE DE TRABAJO'] ))
                ->add('tipoTramite', null, array('label' => 'Marco Legal: '))
                ->add('clasificacion')
                ->add('datoAt', DatoATType::class, array('label' => false))
                ->add('Agente', ObraSocialType::class, array('label' => false)); 
         /*         ->add('agente', Select2EntityType::class, [
                                'multiple' => false,
                                'remote_route' => 'agente_search',
                                'class' => 'AusentismoBundle:Agente',
                                'placeholder' => 'Seleccione un Agente',
                      ] )
                ;                   
             $builder->add('tramite', CollectionType::class, array('label' => false,
            'entry_type' => IniciarTramiteType::class,
            'entry_options' => array('label' => false),
        ));*/



    }

    /**
     * {@inheritdoc}
     */
    public function configureOptions(OptionsResolver $resolver)
    {
        $resolver->setDefaults(array(
            'data_class' => 'Siarme\ExpedienteBundle\Entity\Expediente'
        ));
    }

    /**
     * {@inheritdoc}
     */
    public function getBlockPrefix()
    {
        return 'siarme_expedientebundle_expediente';
    }


}
