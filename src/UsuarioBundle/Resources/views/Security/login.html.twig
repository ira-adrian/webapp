{# app/Resources/views/usuario/login.html.twig#}

{% extends 'frontend.html.twig' %}


{% block title %}Formulario de acceso{% endblock %}
 {% block stylesheets %}
 	{{ parent() }}
<style>
.jumbotron {
    background-color: #f4511e; /* Orange */
    color: #ffffff;
}
.jumbotron h2{
    color: #fff;
}

.jumbotron p{
    color: #fff;
}
</style>
 {% endblock %}

{% block body %}
	 {{ parent() }}
{% if error %}
<div></div>
{% endif %}

{% if error %}
<div class="alert alert-dismissible alert-warning">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
    <div class="flash-notice">
      {{ error.message | trans | raw}}
    </div>
</div>
{% endif %}
    <div class="container">
    <div class="col-lg-3 col-md-2"></div>
    <div class="col-lg-6 col-md-8 col-sm-12">
      <a href="#" class="pull-right need-help">Necesita Ayuda? </a><span class="clearfix"></span>
      <div class="panel panel-default" style="margin:20px">
        <div class="panel-heading text-center">
          Formulario de Autenticacion
        </div>

       <div class="panel-body"> 
      <form class="form-signin" action="{{ path('usuario_login_check') }}" method="post">
                       <p class="text-center"><small>Acceso Restringido al Publico:</small> </p>
	        <div class="form-group">
	        <label for="username" class="sr-only">Usuario</label>
	        <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" placeholder="Nombre de Usuario" required autofocus>
	   		</div>
	        <div class="form-group">
	        <label for="inputPassword" class="sr-only">Contraseña</label>
	        <input type="password" id="password"  name="_password" class="form-control" placeholder="Contraseña" required>
	    	</div>
        {#<div class="checkbox">
          <label>
            <input type="checkbox" value="remember-me"> Remember me
          </label>
        </div>#}
        <div class=" text-right">
        <input class="btn btn-sm btn-primary" name="login"  type="submit" value="Ingresar"> 
        </div>
      </form>
     	</div>
     </div>
 	</div> 
 	<div class="col-lg-3 col-md-2"></div>
</div>
{% endblock %}
